[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[alias]
    pushfeat = "!f() { local_branch=$(git symbolic-ref --short HEAD); remote_branch=\"feat/$1\"; git push --set-upstream origin \"$local_branch:$remote_branch\"; }; f"
    pushfix = "!f() { local_branch=$(git symbolic-ref --short HEAD); remote_branch=\"fix/$1\"; git push --set-upstream origin \"$local_branch:$remote_branch\"; }; f"
